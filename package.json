{
    "name": "react-pdf-view",
    "version": "1.0.0",
    "description": "React Pdf View only component that is based on the react-pdf package.",
    "types": "./lib/cjs/types/index.d.ts",
    "main": "./lib/cjs/index.js",
    "scripts": {
        "clean": "rm -rf ./lib",
        "build": "npm run clean && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
        "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
        "prepack": "npm run build",
        "test": "mocha"
    },
    "files": [
        "lib/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/operationmeta/react-pdf-view.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/operationmeta/react-pdf-view/issues"
    },
    "homepage": "https://github.com/operationmeta/react-pdf-view#readme",
    "exports": {
        ".": {
            "import": {
                "types": "./lib/esm/types/index.d.ts",
                "default": "./lib/esm/index.mjs"
            },
            "require": {
                "types": "./lib/cjs/types/index.d.ts",
                "default": "./lib/cjs/index.js"
            }
        }
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/mocha": "^10.0.1",
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "ts-node": "^10.9.1"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-pdf": "^6.2.0"
    }
}
